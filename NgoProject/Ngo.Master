<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="Ngo.master.cs" Inherits="NgoProject.Ngo" %>

<!DOCTYPE html>

<html>
<head runat="server">
    <title><%: Page.Title %></title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        :root {
            --color: black;
            --acent: #1F51FF;
            --bgColor: white;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        div.ngo-socials svg {
            fill: var(--bgColor);
        }

        header.ngo-header {
            height: 3em;
            padding: 1em 2em;
            box-shadow: 0 0 8px 0 rgba(0,0,0,0.2);
            margin-bottom: 0.5em;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        button.ngo-ham {
            display: none;
        }

        ul.ngo-links {
            display: flex;
            justify-content: space-between;
            align-items: center;
            list-style: none;
        }

        li.ngo-link {
            margin-left: 10px;
            padding-left: 10px;
            border-left: 1px solid;
        }

            li.ngo-link:hover {
                color: var(--acent);
            }

            li.ngo-link:first-child {
                border: transparent;
            }

        @media (max-width: 440px) {
            button.ngo-ham {
                border: transparent;
                background-color: transparent;
                cursor: pointer;
                display: flex;
                justify-content: center;
                flex-direction: column;
                gap: 5px;
            }

                button.ngo-ham > a {
                    height: 5px;
                    background-color: black;
                    width: 30px;
                    display: inline-block;
                }

                    button.ngo-ham > a:nth-child(2n+1) {
                        width: 40px;
                    }

            nav {
                position: fixed;
                inset: 0;
                background-color: rgba(255,2552,255,0.5);
                backdrop-filter: blur(5px);
                opacity: 0;
                pointer-events: none;
            }

                nav.mob-show {
                    opacity: 1;
                    pointer-events: all;
                }

                nav::after {
                    content: '\2716';
                    position: fixed;
                    top: 1em;
                    right: 1em;
                }

            ul.ngo-links {
                flex-direction: column;
                height: 100%;
                justify-content: center;
                align-items: center;
                gap: 1em;
            }


            li.ngo-link {
                margin: 0;
                padding: 0;
                border: transparent;
            }
        }

        a {
            color: inherit;
            text-decoration: none;
        }

        main.ngo-main {
            height: calc(100vh - 7em);
            padding: 1em 2em;
        }

        footer.ngo-footer {
            height: 3em;
            margin-top: 0.5em;
            background-color: var(--color);
            color: var(--bgColor);
            padding: 1em 2em;
            display: flex;
        }

        div.ngo-socials {
            display: flex;
        }

            div.ngo-socials svg {
                cursor: pointer;
                margin: 0 0.5em;
            }

                div.ngo-socials svg:hover {
                    fill: var(--acent);
                }
    </style>
</head>
<body>
    <header class="ngo-header">
