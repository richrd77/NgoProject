    <script>
        const nav = document.getElementById('nav');
        const ham = document.getElementById('ham');

        ham.addEventListener('click', function () {
            nav.classList.add('mob-show');
        });

        nav.addEventListener('click', function () {
            nav.classList.remove('mob-show');
        });
    </script>
